      </div>
      <div class="col-md-3">

      </div>


      </div>

    </div>
    <div class="col-md-3">
      <p class="h4 text-left mb-4">Vehicles in the Store</p>
      <ul class="list-group">
        {{#each brand1}}

          <li class="list-group-item d-flex justify-content-between align-items-center">
              <a href="#">{{this.b_name}}</a>
              <span class="badge badge-primary badge-pill"></span>
          </li>

          {{/each}}

      </ul>
    </div>
  </div>


  <!--vehicle table-->
  <div class="row">
    <table class="table">

    <!--Table head-->
    <thead class="mdb-color darken-3">
        <tr class="text-white">
            <th>#</th>
            <th>Owner</th>
            <th>Colour</th>
            <th>Year</th>
            <th>Brand</th>
            <th>Display</th>
        </tr>
    </thead>
    <!--Table head-->

    <!--Table body-->
    <tbody>
      {{#if result1}}
      {{#each result1}}
        <tr>
            <th scope="row">1</th>
            <td>{{this.owner}}</td>
            <td>{{this.color_id}}</td>
            <td>{{this.year}}</td>
            <td>{{this.b_name}}</td>
            <td><a class="btn btn-primary btn-sm" href="/display_vcl?id={{this.vehicle_id}}">VIEW</a></td>

        </tr>
        {{/each}}
        {{else}}
        <tr>
            <th scope="row"></th>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>

        </tr>
        {{/if}}
    </tbody>
    <!--Table body-->

</table>

<div class="d-flex justify-content-between">

       <!--Name-->
       {{#if color}}
       <!--Pagination -->
       <nav class="my-4">

           <ul class="pagination pagination-circle pg-blue mb-0">

               <!--First-->
               <li class="page-item disabled"><a href="/home?page=1" class="page-link">First</a></li>

               <!--Arrow left-->
               <li class="page-item disabled">
                   <a class="page-link" aria-label="Previous">
                   <span aria-hidden="true">&laquo;</span>
                   <span class="sr-only">Previous</span>
               </a>
               </li>

               <!-- Numbers-->


              <li class="page-item"><a href="/home?color={{color}}&brand={{brand}}&model={{model}}&page=1" class="page-link">1</a></li>
              <li class="page-item"><a href="/home?color={{color}}&brand={{brand}}&model={{model}}&page=2" class="page-link">2</a></li>
              <li class="page-item"><a href="/home?color={{color}}&brand={{brand}}&model={{model}}&page=3" class="page-link">3</a></li>
              <li class="page-item"><a href="/home?color={{color}}&brand={{brand}}&model={{model}}&page=4" class="page-link">4</a></li>







               <!--Arrow right-->
               {{#ifCond currentPage pageCount}}
               <li class="page-item disabled">
                   <a class="page-link" aria-label="Next">
                   <span aria-hidden="true">&raquo;</span>
                   <span class="sr-only">Next</span>
               </a>
               </li>
               {{else}}
               <li class="page-item">
                   <a href="/home?color={{color}}&brand={{brand}}&model={{model}}&page={{inc currentPage}}" class="page-link" aria-label="Next">
                   <span aria-hidden="true">&raquo;</span>
                   <span class="sr-only">Next</span>
               </a>
               </li>
               {{/ifCond}}
               <!--First-->
               <li class="page-item"><a href="/home?color={{color}}&brand={{brand}}&model={{model}}&page={{pageCount}}" class="page-link">Last</a></li>

           </ul>

       </nav>
       <!--/Pagination -->
       {{/if}}
   </div>
  </div>
</div>
