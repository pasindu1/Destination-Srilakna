    <!-- Material form register -->
            <form method="get" action="/home" >
                <p class="h4 text-left mb-4 grey-text">Reserve Your Vehicle</p>
                <div class="row">
                  <div class="col-md-4">
                    <p class="text-left mb-4">pick a color</p>
                  </div>

                  <div class="col-md-8">

                    <select class="custom-select mr-sm-2" id="colorselect" name="color">
                           <option selected>Choose a color...</option>
                           {{#each colors}}
                              <option value="{{this.color_id}}">{{this.color}}</option>
                          {{/each}}
                    </select>

                  </div>

                </div>

                <!-- Material input email -->
                <div class="row">
                  <div class="col-md-4">
                    <p class="text-left mb-4">pick a Brand</p>
                  </div>
                  <div class="col-md-8">
                    <select class="custom-select mr-sm-2" id="brandselect" name="brand">
                           <option selected>Choose a Brand...</option>

                    </select>
                  </div>
                </div>

                <!-- Material input email -->
                <div class="row">
                  <div class="col-md-4">
                    <p class="text-left mb-4">pick a Model</p>
                  </div>
                  <div class="col-md-8">
                    <select class="custom-select mr-sm-2" id="modelselect" name="model">
                           <option selected>Choose a Model...</option>

                    </select>
                  </div>
                </div>


                <!-- Material input text -->
