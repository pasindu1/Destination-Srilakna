        <div class="col-md-8">
          <form class="form-inline">
              <input class="form-control form-control-md mr-3 w-75" id="search" type="text" placeholder="Search Vehicles Here" aria-label="Search">
              <button type="submit" class="btn btn-primary btn-md">Search</button>
          </form>
          <div id="back_results">

          </div>
        </div>
      </div>
      <div class="col-md-1">

      </div>
      <!--end of search bar-->

      <!-- Grabing vehicle-->
      <div id="grab_v" class="row">
      <div class="col-md-1">

      </div>
      <div class="col-md-8">
